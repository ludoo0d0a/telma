{
  "name": "api-sncf",
  "version": "0.0.1",
  "author": "Ludovic Valente",
  "private": true,
  "homepage": "https://ludooo0d0a.github.io/telma/",
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "@react-oauth/google": "^0.13.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "axios": "^1.13.2",
    "bulma": "^1.0.4",
    "gh-pages": "^6.3.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.562.0",
    "maplibre-gl": "^5.15.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-adsense": "^0.1.0",
    "react-dom": "^19.2.3",
    "react-ga4": "^2.1.0",
    "react-map-gl": "^8.1.0",
    "react-router-dom": "^7.11.0",
    "react-snowfall": "^2.4.0",
    "sass": "^1.97.1",
    "swagger-ui-react": "^5.31.0",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "deploy-preview": "BRANCH_PATH=$(git rev-parse --abbrev-ref HEAD | sed 's,^.*/,,') && export PUBLIC_URL=/telma/preview/$BRANCH_PATH/ && vite build && gh-pages -d dist -t --dest preview/$BRANCH_PATH",
    "test": "vitest",
    "generate-client": "npx @openapitools/openapi-generator-cli generate -i public/openapi.json -g typescript-axios -o src/client --additional-properties=supportsES6=true,withInterfaces=true,withSeparateModelsAndApi=true,modelPackage=models,apiPackage=api",
    "generate-favicons": "node scripts/generate-favicons.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "@types/geojson": "^7946.0.16",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "pwa-asset-generator": "^8.1.2",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "swagger-ui-react": {
      "react-copy-to-clipboard": {
        "react": "$react",
        "react-dom": "$react-dom"
      },
      "react-debounce-input": {
        "react": "$react",
        "react-dom": "$react-dom"
      },
      "react-inspector": {
        "react": "$react",
        "react-dom": "$react-dom"
      }
    }
  }
}
